---
interface Props {
  source: string;
  aspectRatio?: number;
}

const { source, aspectRatio = 30/9 } = Astro.props;
---

<div class="w-full h-full flex justify-center">
  <video
    class="w-full h-full aspect-video rounded-lg"
    autoplay
    controls
    muted
    loop
    playsinline
  >
    <source src={source} type="video/mp4" />
  </video>
</div>

